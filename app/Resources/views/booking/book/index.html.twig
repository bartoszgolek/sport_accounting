{% extends 'base.html.twig' %}

{% block body %}
    <h1>Account list</h1>

    <a class="btn btn-default" href="{{ path('booking_book_new') }}">Add account</a>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for booking_book in booking_books %}
            <tr>
                <td><a class="btn btn-default" href="{{ path('booking_book_show', { 'id': booking_book.id }) }}">{{ booking_book.id }}</a></td>
                <td>{{ booking_book.description }}</td>
                <td>{{ attribute(book_types, booking_book.type) }}</td>
                <td>
                    <a class="btn btn-default" href="{{ path('booking_book_show', { 'id': booking_book.id }) }}">show</a>
                    <a class="btn btn-default" href="{{ path('booking_book_edit', { 'id': booking_book.id }) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
