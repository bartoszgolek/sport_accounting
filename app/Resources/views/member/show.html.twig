{% extends 'base.html.twig' %}

{% block body %}
    <h1>Member</h1>

    <div>
        <a class="btn btn-default" href="{{ path('member_index') }}">Back to the list</a>
        <a class="btn btn-default" href="{{ path('member_edit', { 'id': member.id }) }}">Edit</a>
    </div>

    <div class="col-md-3 col-md-offset-4">
        <table class="table table-striped table-hover">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ member.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ member.name }}</td>
                </tr>
                <tr>
                    <th>Book</th>
                    <td>
                        {% if not member.book is null %}
                            <a href="{{ path('booking_book_show', { 'id': member.book.id }) }}">{{ member.book.description }}</a>
                        {% endif %}
                    </td>
                </tr>
            </tbody>
        </table>

        {{ form_start(delete_form) }}
            <input class="btn btn-default" type="submit" value="Delete">
        {{ form_end(delete_form) }}
    </div>
{% endblock %}
