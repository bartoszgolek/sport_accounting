{% extends 'base.html.twig' %}

{% block body %}
    <h1>Member list</h1>

    <div>
        <a class="btn btn-default" href="{{ path('member_new') }}">Add member</a>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Account</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for member in members %}
            <tr>
                <td><a class="btn btn-default" href="{{ path('member_show', { 'id': member.id }) }}">{{ member.id }}</a></td>
                <td>{{ member.name }}</td>
                <td>
                    {% if not member.book is null %}
                        <a href="{{ path('booking_book_show', { 'id': member.book.id }) }}">{{ member.book.description }}</a>
                    {% endif %}
                </td>
                <td>
                    <a class="btn btn-default" href="{{ path('member_show', { 'id': member.id }) }}">show</a>
                    <a class="btn btn-default" href="{{ path('member_edit', { 'id': member.id }) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
