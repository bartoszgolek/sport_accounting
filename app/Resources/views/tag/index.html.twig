{% extends 'base.html.twig' %}

{% block body %}
    <h1>Tag list</h1>

    <div>
        <a class="btn btn-default" href="{{ path('tag_new') }}">Add tag</a>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tag in tags %}
            <tr>
                <td><a class="btn btn-default" href="{{ path('tag_show', { 'id': tag.id }) }}">{{ tag.id }}</a></td>
                <td>{{ tag.name }}</td>
                <td>
                    <a class="btn btn-default" href="{{ path('tag_show', { 'id': tag.id }) }}">show</a>
                    <a class="btn btn-default" href="{{ path('tag_edit', { 'id': tag.id }) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
