{% extends 'base.html.twig' %}

{% block body %}
    <h1>Player</h1>

    <div>
        <a class="btn btn-default" href="{{ path('player_index') }}">Back to the list</a>
        <a class="btn btn-default" href="{{ path('player_edit', { 'id': player.id }) }}">Edit</a>
    </div>

    <div class="col-md-3 col-md-offset-4">
        <table class="table table-striped table-hover">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ player.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ player.name }}</td>
                </tr>
            </tbody>
        </table>

        {{ form_start(delete_form) }}
            <input class="btn btn-default" type="submit" value="Delete">
        {{ form_end(delete_form) }}
    </div>
{% endblock %}
